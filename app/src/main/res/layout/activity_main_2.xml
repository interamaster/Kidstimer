<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:alpha="0.6">




    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center">


            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fotoParentIamgeviewRegister"
                android:layout_gravity="left"
                app:siBorderWidth="6dp"
                android:layout_marginLeft="20dp"
                app:siBorderColor="@android:color/darker_gray"
                android:scaleType="fitXY"
                android:background="@drawable/prisoner_icon"
                android:layout_alignParentLeft="true"


                android:transitionName="Padretransition"
                />



        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:id="@+id/txtname_check_children"
                android:hint="Enter Your Name (Max 8 characters)"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/boys_icon"
                android:layout_below="@+id/txtname_reg"
                android:layout_alignLeft="@+id/txtname_reg"
                android:layout_alignStart="@+id/txtname_reg"
                android:layout_alignRight="@+id/txtname_reg"
                android:layout_alignEnd="@+id/txtname_reg"
                android:layout_weight="1"/>


        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:gravity="center">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="START"
            android:id="@+id/btn_start"
            android:onClick="start"
            android:textColor="#ffffff"
            android:background="@android:color/holo_blue_bright"
            android:layout_below="@+id/txtpass_reg"
            android:layout_alignLeft="@+id/txtpass_reg"
            android:layout_alignStart="@+id/txtpass_reg"
            android:layout_gravity="center"
            android:layout_alignRight="@+id/txtpass_reg"
            android:layout_alignEnd="@+id/txtpass_reg"
            android:layout_weight="1"/>


        </TableRow>

    </TableLayout>



</LinearLayout>